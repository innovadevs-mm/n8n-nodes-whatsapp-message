{
	"name": "n8n-nodes-whatsapp-message",
	"version": "0.1.3",
	"description": "WhatsApp Message node for n8n",
	"license": "MIT",
	"homepage": "https://github.com/innovadevs-mm/n8n-nodes-whatsapp-message",
	"keywords": [
		"n8n-community-node-package"
	],
	"author": {
		"name": "Maryuri",
		"email": "aprendices.innovacion@marketmix.com.co"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/innovadevs-mm/n8n-nodes-whatsapp-message"
	},
	"scripts": {
		"build": "n8n-node build && node build.js",
		"build:watch": "tsc --watch",
		"dev": "n8n-node dev",
		"lint": "n8n-node lint",
		"lint:fix": "n8n-node lint --fix",
		"release": "n8n-node release",
		"prepublishOnly": "npm run build && npm run lint"
	},
	"files": [
		"dist"
	],
	"n8n": {
		"n8nNodesApiVersion": 1,
		"strict": true,
		"credentials": [
			"dist/credentials/WhatsappMessageApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/WhatsApp/WhatsappMessage.node.js"
		]
	},
	"devDependencies": {
		"@n8n/node-cli": "*",
		"@types/node": "^24.10.2",
		"eslint": "9.32.0",
		"prettier": "3.6.2",
		"release-it": "^19.0.4",
		"typescript": "5.9.2"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
